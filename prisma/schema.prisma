// Prisma schema for subtaste-twelve
// Database: MongoDB
// Auth: NextAuth.js

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

// ============================================================================
// AUTHENTICATION (NextAuth.js models)
// ============================================================================

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // Subtaste data
  tasteGenome   TasteGenome?
  apiKeys       ApiKey[]

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// TASTE GENOME
// ============================================================================

model TasteGenome {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Archetype classification
  primary   String   // Designation (e.g., "S-0", "T-1")
  secondary String?
  confidence Float   @default(0.0)
  distribution Json? // Distribution across all 12 archetypes

  // Personality axes (Boveda)
  orderChaos         Float? // 0-1
  mercyRuthlessness  Float? // 0-1
  introvertExtrovert Float? // 0-1
  faithDoubt         Float? // 0-1

  // I Ching hexagram reading
  iching Json? // HexagramReading type

  // Keywords
  keywords Json? // KeywordScores type

  // Gamification
  xp           Int     @default(0)
  tier         String  @default("novice")
  achievements Json?   @default("[]")
  streak       Json?   // Streak tracking

  // Metadata
  signalCount     Int      @default(0)
  stagesCompleted String[] @default([])
  sigilRevealed   Boolean  @default(false)

  // Psychometrics
  psychometrics Json? // Full psychometric profile

  // Context
  subtasteContext Json? // Phase, element, growth/stress paths

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("taste_genomes")
}

// ============================================================================
// EXTERNAL API ACCESS
// ============================================================================

model ApiKey {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  key         String   @unique // The actual API key (hashed)
  name        String   // User-defined name (e.g., "Slayt Integration")
  permissions String[] @default(["read"]) // ["read", "write"]

  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())
  expiresAt   DateTime?

  @@index([userId])
  @@map("api_keys")
}
